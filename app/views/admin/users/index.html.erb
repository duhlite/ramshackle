<h1>Users</h1>
<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Role</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to "#{user.email}", admin_user_path(user.id) %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <% if user.admin %>
          <td>Admin</td>
        <% else %>
          <td>Member</td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<h1>Guests</h1>
<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>First Name</th>
      <th>Last Name</th>
    </tr>
  </thead>
  <tbody>
    <% @guests.each do |guest| %>
      <tr>
        <td><%= link_to "#{guest.email}", admin_guest_path(guest.id) %></td>
        <td><%= guest.first_name %></td>
        <td><%= guest.last_name %></td>
      </tr>
    <% end %>
  </tbody>
</table>